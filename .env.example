# ============================================
# SERVER ENVIRONMENT VARIABLES
# ============================================

# Database Configuration
DB_NAME=ecommerce_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=postgres
DB_PORT=5432

# Node Environment
NODE_ENV=production
PORT=5000

# JWT Secrets (generate with: openssl rand -base64 32)
SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Domain Configuration (used in getUrl() function)
# Development domain - used by getUrl() when NODE_ENV=development
DEV_DOMAIN=http://localhost:5173

# Production domain - used by getUrl() when NODE_ENV=production
# This is used for:
# - CORS origin
# - Email links (password reset, verification)
# - Stripe/PayPal redirect URLs
DOMAIN=https://yourdomain.com

# AWS Configuration (for SES email sending and S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET=your_s3_bucket_name
S3_BUCKET_REGION=us-east-1
CLOUDFRONT_URL=https://your-cloudfront-url.cloudfront.net

# AWS SES Email Configuration
AWS_SES_SENDER=noreply@yourdomain.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_BASE_URL=https://api-m.paypal.com
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id
